<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arthurvanremoortel_werkstuk">

<!--    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RecipeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArthurVanRemoortelWerkstuk">
        <activity
            android:label="@string/details"
            android:name=".ui.explore.FirebaseRecipeDetailsActivity"
            android:exported="false" />
        <activity
            android:label="@string/details"
            android:name=".ui.recipes.RecipeDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivityBar"
            android:exported="false"
            android:label="@string/app_name" />
        <activity
            android:label="@string/edit_recipe"
            android:name=".ui.recipes.NewRecipeActivity"
            android:exported="false" />
        <activity
            android:label="@string/app_name"
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/register"
            android:name=".RegisterActivity"
            android:exported="false" />
    </application>

</manifest>